<Layout title="Welcome to Astro.">
  <main>
    <div class="hero items-start pt-28 bg-base-100">
      <div class="hero-content items-start flex-wrap w-full justify-between">
        <div class="text-center prose max-w-xl lg:text-left">
          <h1
            id="success"
            class="text-6xl pt-8 px-2 mb-0 leading-3 max-w-lg font-black"
          >
            Fall into the pit of <span class="text-9xl mb-0">success</span>
          </h1>
          <p class="py-6 mt-0 pr-8 text-2xl max-w-lg">
            Spellbook is an Astro starter that makes doing the right things easy and the wrong things
            hard.
          </p>
          <div class="flex gap-2">
            <div>
              <button class="btn btn-primary btn-wide">Get Started</button>
              <p class="mt-1">
                <span class="text-primary">Free forever</span> (14 left btw ðŸ˜‰)
              </p>
            </div>
            <button class="btn btn-primary btn-ghost btn-wide">Docs</button>
          </div>
        </div>
        <div
          id="stack"
          class="grow px-8 py-8 rotate-2 flex justify-center flex-col items-center prose prose-sm"
        >
          <!-- <div class="divider mb-0 mt-0"></div> -->
          <div>
            <p
              id="simple"
              class="text-3xl text-base-100 pt-4 px-6 w-full mb-2 grow font-black"
            >
              Keep it simple, make it great.
            </p>
            <!-- <p class="my-0">When your tools are simple, building is easy.</p> -->
          </div>
          <div
            class="grid grid-cols-2 pt-10 justify-between max-w-md mt-0 w-full gap-8"
