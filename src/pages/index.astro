<script>
  import { annotate } from "rough-notation";

  const sucess = document.querySelector("#success");
  const simple = document.querySelector("#simple");
  const stack = document.querySelector("#stack");
  const liars = document.querySelector("#liars");
  const complexity = document.querySelector("#complexity");

  const annotation = annotate(sucess, {
    type: "bracket",
    brackets: ["left", "right"],
    color: "#BD93F9",
  });

  const annotation2 = annotate(simple, {
    type: "highlight",
  });

  const annotation3 = annotate(stack, {
    type: "circle",
  });

  const annotation4 = annotate(complexity, {
    type: "crossed-off",
    color: "#2B2836",
  });

  const annotation5 = annotate(liars, {
    type: "underline",
    color: "#F36A66",
  });

  annotation.show();
  annotation2.show();
  annotation3.show();
  annotation4.show();
  annotation5.show();
</script>
